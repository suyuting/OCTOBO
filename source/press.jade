  body
    .container
      .page-header
        h1=title+" "
          span.subtitle Press Kit
      p.pull-right.lead=tagline
      h2 Fact Sheet
      .panel.panel-default
        .panel-body
          dl.dl-horizontal
          dt Title
          dd=title
          dt Developer
          dd=developer
          dt Location
          dd=location
          dl.dl-horizontal
          dt Release Date
          if release_date
            dd=release_date
          else
            dd Coming Soon
          dt Price
          each price in prices.length ? prices : ['Coming Soon']
            dd=price
          dt Platforms
          each platform in platforms.length ? platforms : ['Coming Soon']
            dd=platform
          dl.dl-horizontal
          dt Web
          dd
            a(href='#{website}')=website
          dt Twitter
          dd
            a(href='http://twitter.com/#{twitter}') @#{twitter}
          dt Contact
          dd
            a(href='mailto:#{contact}', target='_blank')=contact

      h2 Description
      +description()

      h2 History
      +history()

      h2 Features
      ul
        each feature in features
          li=feature

      h2 Credits
      dl.dl-horizontal
        each credit in credits
          dt
            a(href='#{credit.website}')=credit.name
          dd=credit.role

      h2 Video
        each video in videos
          if video.youtube
            .embed-responsive.embed-responsive-16by9
              iframe.embed-responsive-item(src='//www.youtube.com/embed/#{video.youtube}?rel=0&amp;fs=1', allowfullscreen='')

      h2 #{images_name}
      .row
        each image in images
          .col-xs-4
            a.thumbnail(href='#{images_root}#{image}')
              img.img-responsive(src='#{images_thumbs_root}#{image}')
        a(href='#{images_zip}')
          button.btn.btn-default.btn-lg.btn-block(type='button') Download All #{images_name} .zip (#{images_zip_size})

      h2 #{branding_name}
      .row
        each brand in branding
          .col-xs-4
            a.thumbnail(href='#{branding_root}#{brand}')
              img.img-responsive(src='#{branding_thumbs_root}#{brand}')
        a(href='#{branding_zip}')
          button.btn.btn-default.btn-lg.btn-block(type='button') Download All #{branding_name} .zip (#{branding_zip_size})

      h2 Appearances
      ul
        each appearance in appearances
          li
            a(href='#{appearance.website}')=appearance.event

      h2 Mentions
      each mention in mentions
        blockquote
          a(href='#{mention.website}')
            p.
              &ldquo;!{mention.quote}&rdquo;
            footer
              cite=mention.source

      h2 Contact
      ul
        li
          a(href='mailto:#{contact}')=contact

      h2 Special Thanks
      p=special_thanks.join(', ')
